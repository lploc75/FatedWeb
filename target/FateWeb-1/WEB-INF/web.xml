<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProfileServlet</servlet-name>
        <servlet-class>controller.EditProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EasternFeature1</servlet-name>
        <servlet-class>controller.EasternFeature1Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MembershipServlet</servlet-name>
        <servlet-class>controller.MembershipServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EasternHoroscopeServlet</servlet-name>
        <servlet-class>controller.EasternHoroscopeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignoutServlet</servlet-name>
        <servlet-class>controller.SignoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomepageServlet</servlet-name>
        <servlet-class>controller.HomepageServlet</servlet-class>
    </servlet>
    <!-- Định nghĩa các servlet mapping -->
    <servlet>
        <servlet-name>WesternFeature1Servlet</servlet-name>
        <servlet-class>controller.WesternFeature1Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchUserServlet</servlet-name>
        <servlet-class>controller.SearchUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CardServlet</servlet-name>
        <servlet-class>controller.CardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>controller.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpGradeServlet</servlet-name>
        <servlet-class>controller.UpGradeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownGradeServlet</servlet-name>
        <servlet-class>controller.DownGradeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WesternFeature2Servlet</servlet-name>
        <servlet-class>controller.WesternFeature2Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProfileServlet</servlet-name>
        <url-pattern>/editprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EasternFeature1</servlet-name>
        <url-pattern>/eastern-feature-1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MembershipServlet</servlet-name>
        <url-pattern>/membership</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EasternHoroscopeServlet</servlet-name>
        <url-pattern>/eastern-horoscope</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignoutServlet</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomepageServlet</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CardServlet</servlet-name>
        <url-pattern>/CardServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <!-- Định nghĩa và ánh xạ bộ lọc -->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>WesternFeature1Servlet</servlet-name>
        <url-pattern>/westernfeature1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WesternFeature2Servlet</servlet-name>
        <url-pattern>/westernfeature2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchUserServlet</servlet-name>
        <url-pattern>/searchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/deleteUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpGradeServlet</servlet-name>
        <url-pattern>/upGradeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownGradeServlet</servlet-name>
        <url-pattern>/downGradeServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
